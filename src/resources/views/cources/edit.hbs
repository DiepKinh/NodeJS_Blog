<div class="mt-4">
  <h2>Update Cource</h2>
  <form method="POST" action="/cources/{{cource._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name Cource: </label>
      <input
        type="text"
        class="form-control"
        value="{{cource.name}}"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Description Cource: </label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{cource.description}}
      </textarea>
    </div>
    <div class="form-group">
      <label for="videoId">VideoId Cource: </label>
      <input
        type="text"
        class="form-control"
        value="{{cource.videoId}}"
        id="videoId"
        name="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level">Level: </label>
      <input
        type="text"
        class="form-control"
        value="{{cource.level}}"
        id="level"
        name="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Edit Cource</button>
  </form>
</div>