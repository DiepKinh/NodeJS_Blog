<div class="mt-4">
  <h2>Thêm Khóa Học</h2>
  <form method="POST" action="/cources/store">
    <div class="form-group">
      <label for="name">Name Cource: </label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="form-group">
      <label for="description">Description Cource: </label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
      />
    </div>
    <div class="form-group">
      <label for="videoId">VideoId Cource: </label>
      <input type="text" class="form-control" id="videoId" name="videoId" />
    </div>
    <div class="form-group">
      <label for="level">Level: </label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>
    <button type="submit" class="btn btn-primary">Create Cource</button>
  </form>
</div>